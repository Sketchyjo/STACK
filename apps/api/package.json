  "devDependencies": {
    "@stack/eslint-config": "workspace:*",
    "@stack/typescript-config": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.8",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "prisma": "^6.3.0",
    "supertest": "^6.3.4",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  },
  "private": true
