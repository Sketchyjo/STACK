{
  "name": "@stack/api",
  "version": "1.0.0",
  "description": "STACK API Service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "start": "node dist/index.js",
    "lint": "eslint \"**/*.{js,ts}\" && prettier -c \"**/*.{js,ts,json}\"",
    "format": "eslint \"**/*.{js,ts}\" --fix && prettier \"**/*.{js,ts,json}\" --write",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@0glabs/0g-serving-broker": "^0.4.4",
    "@0glabs/0g-ts-sdk": "^0.3.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "@prisma/client": "^6.3.0",
    "@stack/database": "workspace:*",
    "@stack/shared-types": "workspace:*",
    "@turnkey/api-key-stamper": "^0.4.1",
    "@turnkey/http": "^2.12.2",
    "@types/crypto-js": "4.2.2",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "crypto-js": "4.2.0",
    "ethers": "^6.15.0",
    "fastify": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "pino": "^8.19.0",
    "uuid": "^9.0.1",
    "zod": "^3.24.1"
