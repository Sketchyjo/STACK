{
  "name": "@stack/ui",
  "version": "1.0.0",
  "description": "STACK UI Component Library",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": "./dist/index.css",
    "./*": "./src/*"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --external react-native --external react-native-gifted-charts --external react-native-svg --external nativewind && npx tailwindcss -i src/styles/index.css -o dist/index.css --minify",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external react --external react-native --external react-native-gifted-charts --external react-native-svg --external nativewind & npx tailwindcss -i src/styles/index.css -o dist/index.css --watch",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\" && prettier -c \"**/*.{js,jsx,ts,tsx,json}\"",
    "format": "eslint \"**/*.{js,jsx,ts,tsx}\" --fix && prettier \"**/*.{js,jsx,ts,tsx,json}\" --write",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "generate:component": "turbo gen react-component"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0"
  },
  "dependencies": {
    "nativewind": "^4.2.1",
    "react-native-gifted-charts": "^1.4.36",
    "react-native-svg": "^15.8.0"
  },
  "devDependencies": {
    "@stack/eslint-config": "workspace:*",
    "@stack/typescript-config": "workspace:*",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@types/react-native": "^0.73.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.4",
    "tailwindcss": "^3.4.17",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
